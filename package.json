{
  "name": "ch.techstack.blockchain",
  "version": "2.0.0",
  "description": "V2 der Blockchain-Technologie.",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "nest build",
    "build:blockchain": "tsc --watch libs/blockchain.ts --outDir dist/blockchain",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch -- 3002",
    "start:prod": "node dist/main",
    "start:nodez": "npx concurrently \"npm run start:dev -- -- 3003 http://localhost:3003\" \"npm run start:dev -- -- 3004 http://localhost:3004\" \"npm run start:dev -- -- 3005 http://localhost:3005\" \"npm run start:dev -- -- 3006 http://localhost:3006\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean": "npx rimraf dist",
    "send-requests": "chmod +x send_requests.sh && ./send_requests.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoschu/ch.techstack.blockchain.git"
  },
  "keywords": [
    "blockchain",
    "node.js",
    "javascript",
    "typescript"
  ],
  "author": "Tom S.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thoschu/ch.techstack.blockchain/issues"
  },
  "homepage": "https://github.com/thoschu/ch.techstack.blockchain#readme",
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.1.8",
    "axios": "^1.5.0",
    "helmet": "^7.0.0",
    "path": "^0.12.7",
    "ramda": "^0.29.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.0",
    "xstate": "^4.38.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/ramda": "^0.29.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "<rootDir>",
      "libs"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/libs/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
